<%- include('../partials/header', { title: 'Video Games' }) %>

<div class="container">
  <div class="title-bar">
    <h1 class="page-title">Video Games</h1>
    <a href="/games/new" class="create-btn">+ Add New Video Game</a>
  </div>

  <% if (games.length > 0) { %>
  <div class="grid-container">
    <% games.forEach(game => { %>
    <div class="grid-card">
      <h2><a href="/games/<%= game.game_id %>"><%= game.title %></a></h2>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="empty-message">No games available.</p>
  <% } %>
</div>

<%- include('../partials/footer') %>
