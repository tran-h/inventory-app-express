<%- include('../partials/header', { title: "Delete Game" }) -%>

<div class="container">
  <div class="title-bar">
    <h1><%= title %></h1>
  </div>

  <p>Are you sure you want to delete the game "<%= game.title %>"?</p>

  <p><strong>Release Year:</strong> <%= game.release_year %></p>
  <p><strong>Price:</strong> $<%= game.price %></p>

  <% if (genres.length > 0) { %>
  <p><strong>Genres:</strong> <%= genres.map(g => g.name).join(', ') %></p>
  <% } %> <% if (developers.length > 0) { %>
  <p>
    <strong>Developers:</strong> <%= developers.map(d => d.name).join(', ') %>
  </p>
  <% } %>

  <form method="POST" action="/games/<%= game.game_id %>/delete">
    <button type="submit">Confirm Delete</button>
    <a href="/games/<%= game.game_id %>" class="create-btn">Cancel</a>
  </form>
</div>

<%- include('../partials/footer') -%>
