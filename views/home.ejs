<%- include('./partials/header', { title: 'Video Game Store' }) %>

<div class="container">
  <h1 class="page-title">Welcome to the Video Game Store</h1>
  <h2 class="section-title">Browse by Genre</h2>

  <% if (genres.length > 0) { %>
  <div class="grid-container">
    <% genres.forEach(genre => { %>
    <div class="grid-card">
      <h2><a href="/genres/<%= genre.genre_id %>"><%= genre.name %></a></h2>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="empty-message">No genres available.</p>
  <% } %>
</div>

<%- include('./partials/footer') %>
