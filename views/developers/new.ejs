<%- include('../partials/header', { title: "Create Developer" }) -%>

<div class="form-wrapper">
  <h1><%= title %></h1>

  <form action="/developers/new" method="POST">
    <div class="form-group">
      <label for="name">Developer name</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= developer.name || '' %>"
      />
      <label for="country">Developer country</label>
      <input
        type="text"
        id="country"
        name="country"
        value="<%= developer.country || '' %>"
      />
    </div>

    <button type="submit">Create Developer</button>

    <% if (errors.length) { %>
    <div class="error-message">
      <% errors.forEach(err => { %>
      <div><%= err.msg %></div>
      <% }) %>
    </div>
    <% } %>
  </form>
</div>

<%- include('../partials/footer') -%>
