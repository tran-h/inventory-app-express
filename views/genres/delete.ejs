<%- include('../partials/header', { title: "Delete Genre" }) -%>

<div class="container">
  <div class="title-bar">
    <h1><%= title %></h1>
  </div>

  <p>Are you sure you want to delete the genre "<%= genre.name %>"?</p>

  <% if (associatedGames.length > 0) { %>
  <p>This genre is associated with the following games:</p>
  <ul>
    <% associatedGames.forEach(game => { %>
    <li><%= game.title %></li>
    <% }) %>
  </ul>
  <p><strong>You will also remove this genre from those games.</strong></p>
  <% } %>

  <form method="POST" action="/genres/<%= genre.genre_id %>/delete">
    <button type="submit">Confirm Delete</button>
    <a href="/genres/<%= genre.genre_id %>" class="create-btn">Cancel</a>
  </form>
</div>

<%- include('../partials/footer') -%>
